<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_top_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Disciplina: "
            android:textColor="@color/cardview_dark_background"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/tvNomeDisciplinaControle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_top_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semestre: "
            android:textColor="@color/cardview_dark_background"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tvSemestreControle"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_top_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limite de Faltas: "
            android:textColor="@color/cardview_dark_background"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:id="@+id/tvLimiteFaltasControle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_top_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Meta: "
            android:textColor="@color/cardview_dark_background"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvMetaControle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="Total: "
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvNotaTotalControle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/icon_top_margin"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: "
            android:textColor="@color/cardview_dark_background"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tvStatusControle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/icon_top_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:text="Faltas: "
            android:textColor="@color/cardview_dark_background" />

        <ImageButton
            android:id="@+id/btDiminuirFalta"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/icon_bottom_margin"
            android:background="@mipmap/menos1"
            android:text="-"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvFaltasExistentesControle"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btAcrescentarFalta"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/icon_bottom_margin"
            android:background="@mipmap/mais1"
            android:text="+"
            android:textSize="25dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btTarefas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_botoes"
        android:layout_margin="12dp"
        android:text="Tarefas" />

        <Button
            android:id="@+id/btGraficoPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_botoes"
            android:layout_margin="12dp"
            android:text="Gráfico: Prioridade x Nota" />

    <Button
        android:id="@+id/btGraficoTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_botoes"
        android:text="Gráfico: Notas x Tipos de Tarefas" />

</LinearLayout>
</ScrollView>